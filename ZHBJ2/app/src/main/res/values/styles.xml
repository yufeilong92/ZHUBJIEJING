<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ImageView_splash">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@drawable/splash_horse_newyear</item>

    </style>

    <style name="RadioButtom_Buttom">
        <item name="android:textColor">@drawable/selector_radiobtn_textcolor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#898989</item>
        <item name="android:button">@null</item>

    </style>
    <style name="FullScreen_themme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen"/>
    <style name="no_themme" parent="@android:style/Theme.Light.NoTitleBar"/>
</resources>
